{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/lib/*": ["lib/*"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
